@model IEnumerable<MvcMovie.Models.Movie>

@{
    ViewBag.Title = "List";
}

<h2>List</h2>

<script src="@Url.Content("http://ajax.aspnetcdn.com/ajax/jquery.validate/1.10.0/jquery.validate.js")" type="text/javascript"></script>
<script src="@Url.Content("http://ajax.aspnetcdn.com/ajax/mvc/3.0/jquery.validate.unobtrusive.js")" type="text/javascript"></script>
<script src="@Url.Content("http://ajax.aspnetcdn.com/ajax/jQuery/jquery-1.8.2.js")" type="text/javascript"></script>
<script src="@Url.Content("http://ajax.aspnetcdn.com/ajax/jquery.ui/1.9.0/jquery-ui.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/add.jquery.controls.js")" type="text/javascript"></script>
<link href="@Url.Content("http://ajax.aspnetcdn.com/ajax/jquery.ui/1.9.0/themes/hot-sneaks/jquery-ui.css")" rel="stylesheet" type="text/css" />

<div id="MoviesListContainer">
<ul class = "SortableList">
@foreach (var item in Model)
{
    <li class="ui-state-default"><span class="ui-icon ui-icon-arrowthick-2-n-s" id = "SortableIcon"></span>
        @Html.DisplayFor(modelItem => item.Title)
    </li>
}
</ul>
</div>
